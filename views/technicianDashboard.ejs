                    <% } %>
                </div>

                <!-- Content Row -->
                <div class="row">
                    <!-- Recent Activities -->
                    <div class="col-md-8">
                        <div class="activity-card">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="bi bi-clock-history me-2"></i>Aktivitas Terbaru
