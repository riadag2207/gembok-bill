                            </div>
                            <% if (recentActivities && recentActivities.length > 0) { %>
                                <% recentActivities.forEach(function(activity) { %>
                                <div class="activity-item">
                                    <div class="d-flex align-items-start">
                                        <div class="activity-icon bg-primary text-white">
                                            <i class="bi bi-<%= activity.activity_type === 'login' ? 'box-arrow-in-right' : activity.activity_type === 'customer_add' ? 'person-plus' : activity.activity_type === 'payment_record' ? 'credit-card' : 'activity' %>"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <p class="mb-1"><%= activity.description %></p>
                                            <small class="text-muted">
                                                <i class="bi bi-clock me-1"></i>
                                                <%= new Date(activity.created_at).toLocaleString('id-ID') %>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                            <% } else { %>
                                <div class="activity-item text-center">
                                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ddd;"></i>
                                    <p class="text-muted mt-2 mb-0">Belum ada aktivitas</p>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Pending Tasks -->
                    <div class="col-md-4">
                        <div class="task-card">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="bi bi-list-task me-2"></i>Tugas Pending
                                </h6>
                            </div>
                            <% if (pendingTasks && pendingTasks.length > 0) { %>
                                <% pendingTasks.forEach(function(task) { %>
                                <div class="task-item">
                                    <div class="flex-grow-1">
                                        <a href="<%= task.url %>" class="text-decoration-none">
                                            <h6 class="mb-1"><%= task.title %></h6>
                                        </a>
                                    </div>
                                    <% if (task.count > 0) { %>
                                    <span class="badge-count"><%= task.count %></span>
                                    <% } %>
                                </div>
                                <% }); %>
                            <% } else { %>
                                <div class="task-item text-center">
                                    <i class="bi bi-check-circle" style="font-size: 3rem; color: var(--success-color);"></i>
                                    <p class="text-muted mt-2 mb-0">Semua tugas selesai!</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Mobile sidebar toggle
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarToggle = document.querySelector('.navbar-toggler');
            const sidebar = document.getElementById('sidebarMenu');
            
            if (sidebarToggle && sidebar) {
                sidebarToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('show');
                });
                
                // Close sidebar when clicking outside on mobile
                document.addEventListener('click', function(e) {
                    if (window.innerWidth < 768) {
                        if (!sidebar.contains(e.target) && !sidebarToggle.contains(e.target)) {
                            sidebar.classList.remove('show');
                        }
                    }
                });
            }
        });
    </script>
</body>
</html>