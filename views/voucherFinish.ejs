<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pembayaran Voucher - <%= settings.company_header || 'GEMBOK' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }

        .finish-container {
            max-width: 500px;
            margin: 0 auto;
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            overflow: hidden;
        }

        .finish-header {
            background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
            color: white;
            padding: 40px 30px;
            text-align: center;
        }

        .finish-icon {
            font-size: 4rem;
            margin-bottom: 20px;
        }

        .finish-body {
            padding: 40px 30px;
        }

        .status-card {
            background: #f8f9fa;
            border-radius: 15px;
            padding: 25px;
            text-align: center;
            margin: 20px 0;
        }

        .processing-icon {
            font-size: 3rem;
            color: #ffc107;
            margin-bottom: 15px;
        }

        .btn-finish {
            background: linear-gradient(135deg, #2255a6 0%, #1e4d8c 100%);
            border: none;
            border-radius: 10px;
            padding: 12px 30px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            width: 100%;
        }

        .btn-finish:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(34, 85, 166, 0.3);
        }

        .spinner-border-sm {
            width: 1rem;
            height: 1rem;
        }

        .transaction-info {
            background: #e7f3ff;
            border-radius: 10px;
            padding: 15px;
            margin: 20px 0;
        }

        .transaction-info .row {
            margin-bottom: 8px;
        }

        .transaction-info .row:last-child {
            margin-bottom: 0;
        }

        .transaction-info strong {
            color: #2255a6;
        }

        /* Mobile responsive */
        @media (max-width: 768px) {
            .finish-container {
                margin: 10px;
            }

            .finish-header {
                padding: 30px 20px;
            }

            .finish-body {
                padding: 30px 20px;
            }
        }
    </style>
</head>
<body>
    <div class="finish-container">
        <!-- Finish Header -->
        <div class="finish-header">
            <div class="finish-icon">
                <i class="bi bi-clock-history"></i>
            </div>
            <h2 class="mb-2">Memproses Pembayaran</h2>
            <p class="mb-0 opacity-75">Mohon tunggu sebentar...</p>
        </div>

        <!-- Finish Body -->
        <div class="finish-body">
            <!-- Processing Status -->
            <div class="status-card" id="statusCard">
                <div class="processing-icon">
                    <div class="spinner-border text-warning" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <h5 id="statusTitle">Sedang Memproses</h5>
                <p id="statusMessage" class="text-muted mb-0">
                    Kami sedang memverifikasi pembayaran Anda dan membuat voucher WiFi
                </p>
            </div>

            <!-- Transaction Info -->
            <div class="transaction-info">
                <div class="row">
                    <div class="col-4"><strong>Order ID:</strong></div>
                    <div class="col-8"><%= order_id || 'N/A' %></div>
                </div>
                <div class="row">
                    <div class="col-4"><strong>Jumlah:</strong></div>
                    <div class="col-8">Rp <%= (gross_amount || 0).toLocaleString('id-ID') %></div>
                </div>
                <div class="row">
                    <div class="col-4"><strong>Payment:</strong></div>
                    <div class="col-8"><%= payment_type || 'N/A' %></div>
                </div>
                <div class="row">
                    <div class="col-4"><strong>Status:</strong></div>
                    <div class="col-8">
                        <span class="badge bg-<%= transaction_status === 'settlement' ? 'success' : transaction_status === 'pending' ? 'warning' : 'secondary' %>">
                            <%= transaction_status || 'unknown' %>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-grid gap-2">
                <button class="btn btn-finish" id="continueBtn" disabled>
                    <span class="spinner-border spinner-border-sm me-2 d-none" role="status"></span>
                    <span id="btnText">Lanjutkan</span>
                </button>

                <a href="/voucher" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left me-2"></i>Kembali ke Halaman Voucher
                </a>
            </div>

            <!-- Footer -->
            <div class="text-center mt-4 pt-3 border-top">
                <small class="text-muted">
                    Â© 2025 <%= settings.company_header || 'GEMBOK' %> - Sistem Voucher Otomatis
                </small>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const statusCard = document.getElementById('statusCard');
            const statusTitle = document.getElementById('statusTitle');
            const statusMessage = document.getElementById('statusMessage');
            const continueBtn = document.getElementById('continueBtn');
            const btnText = document.getElementById('btnText');
            const spinner = continueBtn.querySelector('.spinner-border');

            const transactionStatus = '<%= transaction_status %>';
            const orderId = '<%= order_id %>';

            // Handle different transaction statuses
            if (transactionStatus === 'settlement' || transactionStatus === 'capture') {
                // Payment successful
                statusCard.innerHTML = `
                    <div class="text-center">
                        <div class="text-success mb-3">
                            <i class="bi bi-check-circle-fill" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="text-success">Pembayaran Berhasil!</h5>
                        <p class="text-muted mb-0">
                            Voucher WiFi sedang dibuat dan akan dikirim ke WhatsApp Anda
                        </p>
                    </div>
                `;

                btnText.textContent = 'Lihat Voucher';
                continueBtn.disabled = false;
                continueBtn.onclick = function() {
                    spinner.classList.remove('d-none');
                    btnText.textContent = 'Memuat...';

                    // Redirect to voucher success page after a short delay
                    setTimeout(() => {
                        window.location.href = '/voucher/success?order_id=' + orderId;
                    }, 2000);
                };

            } else if (transactionStatus === 'pending') {
                // Payment pending
                statusCard.innerHTML = `
                    <div class="text-center">
                        <div class="processing-icon">
                            <i class="bi bi-clock"></i>
                        </div>
                        <h5 class="text-warning">Menunggu Pembayaran</h5>
                        <p class="text-muted mb-0">
                            Pembayaran sedang diproses. Silakan selesaikan pembayaran terlebih dahulu.
                        </p>
                    </div>
                `;

                btnText.textContent = 'Cek Status Pembayaran';
                continueBtn.disabled = false;
                continueBtn.onclick = function() {
                    window.location.reload();
                };

            } else if (transactionStatus === 'cancel' || transactionStatus === 'expire' || transactionStatus === 'failure') {
                // Payment failed
                statusCard.innerHTML = `
                    <div class="text-center">
                        <div class="text-danger mb-3">
                            <i class="bi bi-x-circle-fill" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="text-danger">Pembayaran Gagal</h5>
                        <p class="text-muted mb-0">
                            Pembayaran tidak berhasil. Silakan coba lagi.
                        </p>
                    </div>
                `;

                btnText.textContent = 'Coba Lagi';
                continueBtn.disabled = false;
                continueBtn.onclick = function() {
                    window.location.href = '/voucher';
                };

            } else {
                // Unknown status
                statusCard.innerHTML = `
                    <div class="text-center">
                        <div class="processing-icon">
                            <i class="bi bi-question-circle"></i>
                        </div>
                        <h5 class="text-info">Status Tidak Diketahui</h5>
                        <p class="text-muted mb-0">
                            Status pembayaran tidak dapat ditentukan. Silakan hubungi customer service.
                        </p>
                    </div>
                `;

                btnText.textContent = 'Hubungi CS';
                continueBtn.disabled = false;
                continueBtn.onclick = function() {
                    window.location.href = 'https://wa.me/<%= settings.contact_phone || "081947215703" %>';
                };
            }

            // Auto redirect for successful payments after 5 seconds
            if (transactionStatus === 'settlement' || transactionStatus === 'capture') {
                setTimeout(() => {
                    if (!continueBtn.clicked) {
                        window.location.href = '/voucher/success?order_id=' + orderId;
                    }
                }, 5000);
            }
        });
    </script>
</body>
</html>
