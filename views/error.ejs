<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Portal ISP</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    :root {
      --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      --error-color: #dc3545;
      --warning-color: #ffc107;
      --info-color: #0dcaf0;
    }
    
    body {
      background: var(--primary-gradient);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    .error-container {
      max-width: 600px;
      width: 100%;
      padding: 2rem;
    }
    
    .error-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border: none;
      border-radius: 20px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
      padding: 3rem 2rem;
      text-align: center;
    }
    
    .error-icon {
      font-size: 5rem;
      margin-bottom: 1.5rem;
      display: block;
    }
    
    .error-404 .error-icon {
      color: var(--info-color);
    }
    
    .error-403 .error-icon {
      color: var(--warning-color);
    }
    
    .error-500 .error-icon,
    .error-default .error-icon {
      color: var(--error-color);
    }
    
    .error-title {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
      color: #2d3748;
    }
    
    .error-message {
      font-size: 1.1rem;
      color: #4a5568;
      margin-bottom: 2rem;
      line-height: 1.6;
    }
    
    .error-code {
      font-size: 0.9rem;
      color: #718096;
      margin-bottom: 2rem;
      padding: 0.5rem 1rem;
      background: #f7fafc;
      border-radius: 8px;
      display: inline-block;
      font-family: monospace;
    }
    
    .error-actions {
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
    }
    
    .btn-home {
      background: var(--primary-gradient);
      border: none;
      color: white;
      padding: 0.75rem 2rem;
      border-radius: 50px;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .btn-home:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
      color: white;
    }
    
    .btn-back {
      background: transparent;
      border: 2px solid #e2e8f0;
      color: #4a5568;
      padding: 0.75rem 2rem;
      border-radius: 50px;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .btn-back:hover {
      background: #f7fafc;
      border-color: #cbd5e0;
      color: #2d3748;
    }
    
    .error-details {
      margin-top: 2rem;
      padding: 1.5rem;
      background: #f7fafc;
      border-radius: 12px;
      text-align: left;
    }
    
    .error-details pre {
      background: #2d3748;
      color: #e2e8f0;
      padding: 1rem;
      border-radius: 8px;
      overflow-x: auto;
      font-size: 0.875rem;
      margin: 0;
      white-space: pre-wrap;
      word-wrap: break-word;
    }
    
    .floating-shapes {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: -1;
    }
    
    .shape {
      position: absolute;
      opacity: 0.1;
      animation: float 6s ease-in-out infinite;
    }
    
    .shape:nth-child(1) {
      top: 10%;
      left: 10%;
      animation-delay: 0s;
    }
    
    .shape:nth-child(2) {
      top: 20%;
      right: 10%;
      animation-delay: 2s;
    }
    
    .shape:nth-child(3) {
      bottom: 20%;
      left: 20%;
      animation-delay: 4s;
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-20px); }
    }
    
    @media (max-width: 768px) {
      .error-container {
        padding: 1rem;
      }
      
      .error-card {
        padding: 2rem 1.5rem;
      }
      
      .error-title {
        font-size: 2rem;
      }
      
      .error-icon {
        font-size: 3.5rem;
      }
      
      .error-actions {
        flex-direction: column;
        align-items: center;
      }
      
      .btn-home,
      .btn-back {
        width: 100%;
        max-width: 250px;
        justify-content: center;
      }
    }
  </style>
</head>
<body>
  <!-- Floating Shapes for Visual Appeal -->
  <div class="floating-shapes">
    <i class="bi bi-gear shape" style="font-size: 3rem;"></i>
    <i class="bi bi-wifi shape" style="font-size: 2.5rem;"></i>
    <i class="bi bi-router shape" style="font-size: 2rem;"></i>
  </div>

  <div class="error-container">
    <div class="card error-card">
      <div class="error-content error-<%= statusCode || 'default' %>">
        <!-- Error Icon based on status code -->
        <% if (statusCode === 404) { %>
          <i class="bi bi-search error-icon"></i>
        <% } else if (statusCode === 403) { %>
          <i class="bi bi-shield-exclamation error-icon"></i>
        <% } else if (statusCode === 401) { %>
          <i class="bi bi-person-x error-icon"></i>
        <% } else if (statusCode >= 500) { %>
          <i class="bi bi-exclamation-triangle error-icon"></i>
        <% } else { %>
          <i class="bi bi-exclamation-circle error-icon"></i>
        <% } %>

        <!-- Error Title -->
        <h1 class="error-title">
          <% if (statusCode === 404) { %>
            Halaman Tidak Ditemukan
          <% } else if (statusCode === 403) { %>
            Akses Ditolak
          <% } else if (statusCode === 401) { %>
            Autentikasi Diperlukan
          <% } else if (statusCode >= 500) { %>
            Terjadi Kesalahan Server
          <% } else { %>
            <%= title || 'Terjadi Kesalahan' %>
          <% } %>
        </h1>

        <!-- Error Message -->
        <p class="error-message">
          <%= message || 'Maaf, terjadi kesalahan yang tidak terduga. Silakan coba lagi nanti.' %>
        </p>

        <!-- Error Code -->
        <% if (statusCode) { %>
          <div class="error-code">
            Error Code: <%= statusCode %>
          </div>
        <% } %>

        <!-- Action Buttons -->
        <div class="error-actions">
          <a href="javascript:history.back()" class="btn-back">
            <i class="bi bi-arrow-left"></i>
            Kembali
          </a>
          
          <% if (statusCode === 401) { %>
            <a href="/customer/login" class="btn-home">
              <i class="bi bi-person-check"></i>
              Login
            </a>
          <% } else { %>
            <a href="/customer/login" class="btn-home">
              <i class="bi bi-house"></i>
              Beranda
            </a>
          <% } %>
        </div>

        <!-- Developer Details (only in development) -->
        <% if (typeof showDetails !== 'undefined' && showDetails && typeof stack !== 'undefined') { %>
          <div class="error-details">
            <h5><i class="bi bi-bug"></i> Detail Teknis (Development Mode)</h5>
            <pre><%= stack %></pre>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Auto-refresh for temporary errors -->
  <% if (statusCode >= 500 && statusCode < 600) { %>
    <script>
      // Auto-refresh after 30 seconds for server errors
      setTimeout(() => {
        if (confirm('Apakah Anda ingin mencoba memuat ulang halaman?')) {
          location.reload();
        }
      }, 30000);
    </script>
  <% } %>

  <!-- Add some interaction -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Add fade-in animation
      document.querySelector('.error-card').style.opacity = '0';
      document.querySelector('.error-card').style.transform = 'translateY(20px)';
      
      setTimeout(() => {
        document.querySelector('.error-card').style.transition = 'all 0.5s ease';
        document.querySelector('.error-card').style.opacity = '1';
        document.querySelector('.error-card').style.transform = 'translateY(0)';
      }, 100);

      // Add click effect to buttons
      document.querySelectorAll('.btn-home, .btn-back').forEach(btn => {
        btn.addEventListener('click', function(e) {
          this.style.transform = 'scale(0.95)';
          setTimeout(() => {
            this.style.transform = '';
          }, 150);
        });
      });
    });
  </script>
</body>
</html>