<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Monitoring Device' %> - <%= settings.company_header || 'GEMBOK' %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Technician Mobile CSS -->
    <link href="/css/technician-mobile.css" rel="stylesheet">
    
    <style>
        /* Ensure body has bottom padding for navbar */
        body {
            padding-bottom: 80px;
            margin: 0;
            overflow-x: hidden;
        }
        
        /* Ensure no element covers the navbar */
        * {
            box-sizing: border-box;
        }
        
        /* Make sure container doesn't interfere */
        .container-fluid {
            margin-bottom: 80px;
        }
        
        /* Force navbar to be visible with highest priority */
        .tech-bottom-nav {
            display: grid !important;
            position: fixed !important;
            bottom: 0 !important;
            left: 0 !important;
            right: 0 !important;
            width: 100% !important;
            z-index: 999999 !important;
            background: linear-gradient(180deg, rgba(4, 78, 59, 0.96), rgba(5, 150, 105, 0.96)) !important;
            border-top: 1px solid rgba(255,255,255,0.08) !important;
            height: 70px !important;
            grid-template-columns: 1fr 1fr 1.5fr 1fr 1fr !important;
            backdrop-filter: blur(10px) !important;
            padding: 8px 0 !important;
            /* Debug styling to make it extremely visible */
            border: 3px solid red !important;
            box-shadow: 0 -5px 20px rgba(255, 0, 0, 0.5) !important;
            opacity: 1 !important;
            visibility: visible !important;
        }
        
        /* Force all possible scenarios */
        .tech-bottom-nav {
            display: grid !important;
            visibility: visible !important;
            opacity: 1 !important;
        }
        
        /* Mobile specific adjustments - force visible on ALL screen sizes for debugging */
        @media screen {
            .tech-bottom-nav {
                display: grid !important;
                visibility: visible !important;
                opacity: 1 !important;
            }
            
            .tech-nav-item {
                display: flex !important;
                flex-direction: column !important;
                align-items: center !important;
                justify-content: center !important;
                gap: 4px !important;
                color: #93A1C6 !important;
                text-decoration: none !important;
                font-size: 12px !important;
                transition: all 0.3s ease !important;
                position: relative !important;
                border-radius: 8px !important;
                margin: 0 4px !important;
            }
            
            .tech-nav-item.active {
                color: #fff !important;
                background: rgba(255,255,255,0.1) !important;
            }
            
            .tech-nav-item i {
                font-size: 18px !important;
                transition: all 0.3s ease !important;
            }
            
            .tech-nav-item span {
                font-size: 11px !important;
                font-weight: 500 !important;
            }
        }
        
        /* DEBUG: Show on all screen sizes for now */
        @media (min-width: 768px) {
            .tech-bottom-nav {
                display: grid !important;
                visibility: visible !important;
                opacity: 1 !important;
            }
            body {
                padding-bottom: 80px !important;
            }
        }
    </style>
    
    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#10b981">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="apple-mobile-web-app-title" content="Portal Teknisi">
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/img/icons/icon-192.png">
</head>
<body data-technician-role="<%= technician.role || 'technician' %>">
    <!-- Mobile Header -->
    <div class="tech-mobile-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4><i class="bi bi-wifi me-2"></i>Monitoring Device</h4>
                <p>Pantau status device dan jaringan</p>
            </div>
            <div class="text-end">
                <button class="btn btn-outline-light btn-sm me-2" onclick="refreshDevices()" id="refresh-devices">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
                <div class="dropdown">
                    <button class="btn btn-outline-light btn-sm" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/technician/dashboard"><i class="bi bi-house me-2"></i>Dashboard</a></li>
                        <li><a class="dropdown-item" href="/technician/customers"><i class="bi bi-people me-2"></i>Pelanggan</a></li>
                        <li><a class="dropdown-item" href="/technician/mapping"><i class="bi bi-geo-alt me-2"></i>Peta Jaringan</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/technician/logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container-fluid px-3">
        <!-- Stats Grid -->
        <div class="tech-stats-grid">
            <div class="tech-stat-card">
                <div class="tech-stat-icon">
                    <i class="bi bi-wifi"></i>
                </div>
                <div class="tech-stat-value" id="total-devices"><%= genieacsTotal || 0 %></div>
                <div class="tech-stat-label">Total Device</div>
            </div>
            
            <div class="tech-stat-card">
                <div class="tech-stat-icon">
                    <i class="bi bi-check-circle text-success"></i>
                </div>
                <div class="tech-stat-value text-success" id="online-devices"><%= genieacsOnline || 0 %></div>
                <div class="tech-stat-label">Online</div>
            </div>
            
            <div class="tech-stat-card">
                <div class="tech-stat-icon">
                    <i class="bi bi-x-circle text-danger"></i>
                </div>
                <div class="tech-stat-value text-danger" id="offline-devices"><%= genieacsOffline || 0 %></div>
                <div class="tech-stat-label">Offline</div>
            </div>
            
            <div class="tech-stat-card">
                <div class="tech-stat-icon">
                    <i class="bi bi-percent"></i>
                </div>
                <div class="tech-stat-value" id="uptime-percentage">
                    <%= genieacsTotal > 0 ? Math.round((genieacsOnline / genieacsTotal) * 100) : 0 %>%
                </div>
                <div class="tech-stat-label">Uptime</div>
            </div>
        </div>

        <!-- Filter Options -->
        <div class="tech-quick-actions">
            <h5><i class="bi bi-funnel me-2"></i>Filter Device</h5>
            <div class="row g-2">
                <div class="col-4">
                    <select class="form-select form-select-sm" id="status-filter">
                        <option value="all">Semua Status</option>
                        <option value="online">Online</option>
                        <option value="offline">Offline</option>
                    </select>
                </div>
                <div class="col-4">
                    <select class="form-select form-select-sm" id="model-filter">
                        <option value="all">Semua Model</option>
                        <option value="router">Router</option>
                        <option value="ont">ONT</option>
                    </select>
                </div>
                <div class="col-4">
                    <input type="text" class="form-control form-control-sm" id="search-device" placeholder="Cari device...">
                </div>
            </div>
        </div>

        <!-- Device List -->
        <div class="tech-quick-actions">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5><i class="bi bi-list-ul me-2"></i>Daftar Device</h5>
                <div class="btn-group btn-group-sm" role="group">
                    <button type="button" class="btn btn-outline-primary active" onclick="toggleView('list')">
                        <i class="bi bi-list"></i>
                    </button>
                    <button type="button" class="btn btn-outline-primary" onclick="toggleView('grid')">
                        <i class="bi bi-grid-3x3"></i>
                    </button>
                </div>
            </div>
            
            <div id="device-list">
                <% if (devices && devices.length > 0) { %>
                    <% devices.forEach((device, index) => { %>
                        <div class="device-item mb-3" data-device-id="<%= device.id %>" data-status="<%= device.lastInform && (Date.now() - new Date(device.lastInform).getTime()) < 3600*1000 ? 'online' : 'offline' %>">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h6 class="card-title mb-1">
                                                <%= device.serialNumber || device.id %>
                                                <span class="badge bg-<%= device.lastInform && (Date.now() - new Date(device.lastInform).getTime()) < 3600*1000 ? 'success' : 'danger' %> ms-2">
                                                    <%= device.lastInform && (Date.now() - new Date(device.lastInform).getTime()) < 3600*1000 ? 'Online' : 'Offline' %>
                                                </span>
                                            </h6>
                                            <p class="card-text small text-muted mb-0">
                                                <%= device.model || 'Unknown Model' %>
                                            </p>
                                        </div>
                                        <div class="dropdown">
                                            <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="dropdown">
                                                <i class="bi bi-three-dots-vertical"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="#" onclick="viewDeviceDetails('<%= device.id %>')">
                                                    <i class="bi bi-eye me-2"></i>Detail
                                                </a></li>
                                                <li><a class="dropdown-item" href="#" onclick="editDevice('<%= device.id %>')">
                                                    <i class="bi bi-pencil me-2"></i>Edit
                                                </a></li>
                                                <li><a class="dropdown-item" href="#" onclick="rebootDevice('<%= device.id %>')">
                                                    <i class="bi bi-arrow-clockwise me-2"></i>Reboot
                                                </a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <div class="small">
                                                <strong>PPPoE:</strong> <%= device.pppoeUsername || '-' %>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="small">
                                                <strong>SSID:</strong> <%= device.ssid || '-' %>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="small">
                                                <strong>RX Power:</strong> <%= device.rxPower || '-' %>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="small">
                                                <strong>Last Inform:</strong> 
                                                <%= device.lastInform ? new Date(device.lastInform).toLocaleString('id-ID') : '-' %>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <% if (device.tag && device.tag !== '-') { %>
                                    <div class="mt-2">
                                        <span class="badge bg-light text-dark">
                                            <i class="bi bi-tag me-1"></i><%= device.tag %>
                                        </span>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="bi bi-wifi-off text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-2">Tidak ada device yang ditemukan</p>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Load More Button -->
        <div class="text-center mb-5">
            <button class="btn btn-outline-primary" onclick="loadMoreDevices()">
                <i class="bi bi-arrow-down-circle me-2"></i>Load More
            </button>
        </div>
    </div>

    <!-- Bottom Navigation -->
    <div class="tech-bottom-nav">
        <a href="/technician/dashboard" class="tech-nav-item">
            <i class="bi bi-house"></i>
            <span>Home</span>
        </a>
        
        <a href="/technician/monitoring" class="tech-nav-item active">
            <i class="bi bi-wifi"></i>
            <span>Monitor</span>
        </a>
        
        <a href="/technician/troubletickets" class="tech-nav-item home-button">
            <i class="bi bi-ticket-detailed"></i>
            <span>Tiket</span>
        </a>
        
        <a href="/technician/customers" class="tech-nav-item">
            <i class="bi bi-people"></i>
            <span>Customer</span>
        </a>
        
        <a href="/technician/mapping" class="tech-nav-item">
            <i class="bi bi-geo-alt"></i>
            <span>Map</span>
        </a>
    </div>

    <!-- Device Detail Modal -->
    <div class="modal fade" id="deviceDetailModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detail Device</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="deviceDetailContent">
                    <!-- Content will be loaded here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                    <button type="button" class="btn btn-primary" onclick="editDeviceFromModal()">Edit</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Technician Mobile JS -->
    <script src="/js/technician-mobile.js"></script>
    
    <script>
        let currentView = 'list';
        let currentPage = 1;
        let isLoading = false;
        
        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            initializeFilters();
            initializeDeviceList();
        });
        
        function initializeFilters() {
            const statusFilter = document.getElementById('status-filter');
            const modelFilter = document.getElementById('model-filter');
            const searchInput = document.getElementById('search-device');
            
            statusFilter.addEventListener('change', filterDevices);
            modelFilter.addEventListener('change', filterDevices);
            searchInput.addEventListener('input', debounce(filterDevices, 300));
        }
        
        function initializeDeviceList() {
            // Add click handlers to device items
            const deviceItems = document.querySelectorAll('.device-item');
            deviceItems.forEach(item => {
                item.addEventListener('click', function() {
                    const deviceId = this.dataset.deviceId;
                    viewDeviceDetails(deviceId);
                });
            });
        }
        
        function filterDevices() {
            const statusFilter = document.getElementById('status-filter').value;
            const modelFilter = document.getElementById('model-filter').value;
            const searchTerm = document.getElementById('search-device').value.toLowerCase();
            
            const deviceItems = document.querySelectorAll('.device-item');
            
            deviceItems.forEach(item => {
                const deviceStatus = item.dataset.status;
                const deviceText = item.textContent.toLowerCase();
                
                let showItem = true;
                
                // Filter by status
                if (statusFilter !== 'all' && deviceStatus !== statusFilter) {
                    showItem = false;
                }
                
                // Filter by search term
                if (searchTerm && !deviceText.includes(searchTerm)) {
                    showItem = false;
                }
                
                // Filter by model (simplified)
                if (modelFilter !== 'all') {
                    const modelText = item.querySelector('.card-text').textContent.toLowerCase();
                    if (modelFilter === 'router' && !modelText.includes('router')) {
                        showItem = false;
                    } else if (modelFilter === 'ont' && !modelText.includes('ont')) {
                        showItem = false;
                    }
                }
                
                item.style.display = showItem ? 'block' : 'none';
            });
        }
        
        function toggleView(view) {
            currentView = view;
            const deviceList = document.getElementById('device-list');
            
            // Update button states
            document.querySelectorAll('.btn-group .btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            // Toggle view classes
            if (view === 'grid') {
                deviceList.classList.add('row');
                deviceList.classList.add('g-3');
                deviceList.querySelectorAll('.device-item').forEach(item => {
                    item.classList.add('col-12', 'col-md-6');
                });
            } else {
                deviceList.classList.remove('row', 'g-3');
                deviceList.querySelectorAll('.device-item').forEach(item => {
                    item.classList.remove('col-12', 'col-md-6');
                });
            }
        }
        
        function viewDeviceDetails(deviceId) {
            // Find device data
            const deviceItem = document.querySelector(`[data-device-id="${deviceId}"]`);
            if (!deviceItem) return;
            
            const cardBody = deviceItem.querySelector('.card-body');
            const deviceData = {
                id: deviceId,
                serialNumber: cardBody.querySelector('.card-title').textContent.split(' ')[0],
                model: cardBody.querySelector('.card-text').textContent,
                status: deviceItem.dataset.status,
                pppoeUsername: cardBody.querySelectorAll('.small')[0].textContent.split(': ')[1],
                ssid: cardBody.querySelectorAll('.small')[1].textContent.split(': ')[1],
                rxPower: cardBody.querySelectorAll('.small')[2].textContent.split(': ')[1],
                lastInform: cardBody.querySelectorAll('.small')[3].textContent.split(': ')[1]
            };
            
            // Populate modal content
            const modalContent = document.getElementById('deviceDetailContent');
            modalContent.innerHTML = `
                <div class="row g-3">
                    <div class="col-6">
                        <strong>Serial Number:</strong><br>
                        <span class="text-muted">${deviceData.serialNumber}</span>
                    </div>
                    <div class="col-6">
                        <strong>Model:</strong><br>
                        <span class="text-muted">${deviceData.model}</span>
                    </div>
                    <div class="col-6">
                        <strong>Status:</strong><br>
                        <span class="badge bg-${deviceData.status === 'online' ? 'success' : 'danger'}">
                            ${deviceData.status === 'online' ? 'Online' : 'Offline'}
                        </span>
                    </div>
                    <div class="col-6">
                        <strong>PPPoE Username:</strong><br>
                        <span class="text-muted">${deviceData.pppoeUsername}</span>
                    </div>
                    <div class="col-6">
                        <strong>SSID:</strong><br>
                        <span class="text-muted">${deviceData.ssid}</span>
                    </div>
                    <div class="col-6">
                        <strong>RX Power:</strong><br>
                        <span class="text-muted">${deviceData.rxPower}</span>
                    </div>
                    <div class="col-12">
                        <strong>Last Inform:</strong><br>
                        <span class="text-muted">${deviceData.lastInform}</span>
                    </div>
                </div>
            `;
            
            // Show modal
            const modal = new bootstrap.Modal(document.getElementById('deviceDetailModal'));
            modal.show();
        }
        
        function editDevice(deviceId) {
            // Redirect to edit page or show edit modal
            showNotification('Fitur edit device akan segera tersedia', 'info');
        }
        
        function editDeviceFromModal() {
            const modal = bootstrap.Modal.getInstance(document.getElementById('deviceDetailModal'));
            modal.hide();
            editDevice();
        }
        
        function rebootDevice(deviceId) {
            if (confirm('Apakah Anda yakin ingin me-reboot device ini?')) {
                showNotification('Perintah reboot dikirim ke device', 'info');
                // Implement reboot functionality
            }
        }
        
        function refreshDevices() {
            const refreshBtn = document.getElementById('refresh-devices');
            refreshBtn.innerHTML = '<i class="bi bi-arrow-clockwise spinner"></i>';
            refreshBtn.disabled = true;
            
            // Simulate refresh
            setTimeout(() => {
                location.reload();
            }, 1000);
        }
        
        function loadMoreDevices() {
            if (isLoading) return;
            
            isLoading = true;
            showNotification('Memuat device tambahan...', 'info');
            
            // Simulate loading more devices
            setTimeout(() => {
                isLoading = false;
                showNotification('Semua device telah dimuat', 'success');
            }, 1000);
        }
        
        // Auto refresh every 30 seconds
        setInterval(() => {
            if (document.visibilityState === 'visible') {
                refreshDevices();
            }
        }, 30000);
        
        // Force navbar visibility with multiple checks
        function forceShowNavbar() {
            const navbar = document.querySelector('.tech-bottom-nav');
            if (navbar) {
                // Force all possible styling
                navbar.style.display = 'grid';
                navbar.style.position = 'fixed';
                navbar.style.bottom = '0';
                navbar.style.left = '0';
                navbar.style.right = '0';
                navbar.style.width = '100%';
                navbar.style.zIndex = '999999';
                navbar.style.visibility = 'visible';
                navbar.style.opacity = '1';
                navbar.style.height = '70px';
                navbar.style.background = 'linear-gradient(180deg, rgba(4, 78, 59, 0.96), rgba(5, 150, 105, 0.96))';
                navbar.style.border = '3px solid red';
                navbar.style.boxShadow = '0 -5px 20px rgba(255, 0, 0, 0.5)';
                navbar.style.gridTemplateColumns = '1fr 1fr 1.5fr 1fr 1fr';
                navbar.style.padding = '8px 0';
                navbar.style.backdropFilter = 'blur(10px)';
                navbar.style.borderTop = '1px solid rgba(255,255,255,0.08)';
                
                console.log('Navbar forced to be visible:', navbar);
                console.log('Navbar computed style:', window.getComputedStyle(navbar));
            } else {
                console.log('ERROR: Navbar not found in DOM');
            }
        }
        
        // Multiple attempts to show navbar
        document.addEventListener('DOMContentLoaded', forceShowNavbar);
        window.addEventListener('load', forceShowNavbar);
        setTimeout(forceShowNavbar, 500);
        setTimeout(forceShowNavbar, 1000);
        setTimeout(forceShowNavbar, 2000);
    </script>

    <!-- Bottom Navigation -->
    <div class="tech-bottom-nav">
        <a href="/technician/mobile/dashboard" class="tech-nav-item">
            <i class="bi bi-house"></i>
            <span>Home</span>
        </a>
        
        <a href="/technician/mobile/monitoring" class="tech-nav-item active">
            <i class="bi bi-wifi"></i>
            <span>Monitor</span>
        </a>
        
        <a href="/technician/troubletickets" class="tech-nav-item home-button">
            <i class="bi bi-ticket-detailed"></i>
            <span>Tiket</span>
        </a>
        
        <a href="/technician/mobile/customers" class="tech-nav-item">
            <i class="bi bi-people"></i>
            <span>Customer</span>
        </a>
        
        <a href="/technician/mobile/mapping" class="tech-nav-item">
            <i class="bi bi-geo-alt"></i>
            <span>Map</span>
        </a>
    </div>
</body>
</html>
