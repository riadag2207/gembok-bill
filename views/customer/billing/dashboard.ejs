    <script>
  $(document).ready(function() {
    // Initialize DataTable for invoices if table exists
    if ($('#invoicesTable').length) {
      $('#invoicesTable').DataTable({
        responsive: true,
        language: {
          url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/id.json'
        },
        dom: '<"top"f>rt<"bottom"lip><"clear">',
        ordering: true,
        info: true,
        paging: true,
        pageLength: 10,
        lengthMenu: [[5, 10, 25, -1], [5, 10, 25, "Semua"]],
        columnDefs: [{
          targets: '_all',
          className: 'align-middle'
        }]
      });
    }

    // Auto refresh logo
    function refreshLogo() {
      const logo = document.getElementById('logoImage');
      if (logo) {
        const timestamp = new Date().getTime();
        const src = logo.src.split('?')[0];
        logo.src = `${src}?v=${timestamp}`;
      }
    }

    // Refresh logo every 5 seconds
    setInterval(refreshLogo, 5000);
  });

  // QR Code toggle function
  function toggleQRCode() {
    const qrContainer = document.getElementById('qr-container');
    const showBtn = document.getElementById('show-qr-btn');
    const hideBtn = document.getElementById('hide-qr-btn');
    
    if (qrContainer.style.display === 'none') {
      // Show QR Code image
      qrContainer.style.display = 'block';
      showBtn.style.display = 'none';
      hideBtn.style.display = 'inline-block';
    } else {
      // Hide QR Code image
      qrContainer.style.display = 'none';
      showBtn.style.display = 'inline-block';
      hideBtn.style.display = 'none';
    }
  }
