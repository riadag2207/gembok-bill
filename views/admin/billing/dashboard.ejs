                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tagihan Terlambat -->
                    <div class="col-xl-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="bx bx-time"></i> Tagihan Terlambat
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h4 class="header-title">Tagihan Terlambat</h4>
                                    <span class="badge bg-danger"><%= overdueInvoices.length %></span>
                                </div>
                                
                                <div class="table-responsive">
                                    <table class="table table-centered table-nowrap table-hover mb-0">
                                        <thead>
                                            <tr>
                                                <th>Pelanggan</th>
                                                <th>Jumlah</th>
                                                <th>Jatuh Tempo</th>
                                                <th>Aksi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (overdueInvoices && overdueInvoices.length > 0) { %>
                                                <% overdueInvoices.forEach(function(invoice) { %>
                                                    <tr>
                                                        <td>
                                                            <span class="text-body fw-bold"><%= invoice.customer_name %></span>
                                                            <br>
                                                            <small class="text-muted"><%= invoice.customer_phone %></small>
                                                        </td>
                                                        <td>Rp <%= parseFloat(invoice.amount).toLocaleString('id-ID') %></td>
                                                        <td>
                                                            <span class="text-danger">
                                                                <%= new Date(invoice.due_date).toLocaleDateString('id-ID') %>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <div class="btn-group btn-group-sm" role="group">
                                                                <button type="button" class="btn btn-outline-danger" onclick="suspendCustomer('<%= invoice.username %>')">
                                                                    <i class="bx bx-block"></i> Isolir
                                                                </button>
                                                                <button type="button" class="btn btn-outline-success" onclick="restoreCustomer('<%= invoice.username %>')">
                                                                    <i class="bx bx-rotate-left"></i> Restore
                                                                </button>
                                                                <button type="button" class="btn btn-outline-secondary"
                                                                    data-phone="<%= invoice.customer_phone || '' %>"
                                                                    data-name="<%= invoice.customer_name || '' %>"
                                                                    data-invoicenumber="<%= invoice.invoice_number || '' %>"
                                                                    data-amount="<%= invoice.amount || 0 %>"
                                                                    onclick="sendWaReminderFromBtn(this)">
                                                                    <i class="bx bx-message-rounded-dots"></i> Reminder
                                                                </button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="4" class="text-center text-muted">Tidak ada tagihan terlambat</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Toast Container -->
