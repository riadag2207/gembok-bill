                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h4 class="header-title">Tagihan Terbaru</h4>
                                    <a href="/admin/billing/invoices" class="btn btn-sm btn-primary">Lihat Semua</a>
                                </div>
                                
                                <div class="table-responsive">
                                    <table class="table table-centered table-nowrap table-hover mb-0">
                                        <thead>
                                            <tr>
                                                <th>No. Tagihan</th>
                                                <th>Pelanggan</th>
                                                <th>Paket</th>
                                                <th>Jumlah</th>
                                                <th>Status</th>
                                                <th>Jatuh Tempo</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (recentInvoices && recentInvoices.length > 0) { %>
                                                <% recentInvoices.forEach(function(invoice) { %>
                                                    <tr>
                                                        <td>
                                                            <a href="/admin/billing/invoices/<%= invoice.id %>" class="text-body fw-bold">
                                                                <%= invoice.invoice_number %>
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <span class="text-body fw-bold"><%= invoice.customer_name %></span>
                                                            <br>
                                                            <small class="text-muted"><%= invoice.customer_phone %></small>
                                                        </td>
                                                        <td><%= invoice.package_name %></td>
                                                        <td>Rp <%= parseFloat(invoice.amount).toLocaleString('id-ID') %></td>
                                                        <td>
                                                            <% if (invoice.status === 'paid') { %>
                                                                <span class="badge bg-success">Lunas</span>
                                                            <% } else if (invoice.status === 'unpaid') { %>
                                                                <% if (new Date(invoice.due_date) < new Date()) { %>
                                                                    <span class="badge bg-danger">Terlambat</span>
                                                                <% } else { %>
                                                                    <span class="badge bg-warning">Belum Lunas</span>
                                                                <% } %>
                                                            <% } %>
