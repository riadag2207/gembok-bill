                                    <div class="col-4">
                                        <h4 class="text-primary"><%= stats.monthly_invoices || 0 %></h4>
                                        <p class="text-muted mb-0">Total</p>
                                    </div>
                                    <div class="col-4">
                                        <h4 class="text-success"><%= stats.paid_monthly_invoices || 0 %></h4>
                                        <p class="text-muted mb-0">Lunas</p>
