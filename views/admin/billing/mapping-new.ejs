        }
        
        .legend-color.cable-connected {
            background: #28a745;
            border-radius: 2px;
            width: 16px;
            height: 3px;
        }
        
        .legend-color.cable-disconnected {
            background: #dc3545;
            border-radius: 2px;
            width: 16px;
            height: 3px;
            background-image: repeating-linear-gradient(
                90deg,
                #dc3545,
                #dc3545 3px,
                transparent 3px,
                transparent 6px
            );
        }
        
        /* Responsive design for mobile/portrait */
        @media (max-width: 768px) {
            .control-panel {
                position: fixed;
                top: 10px;
                right: 10px;
                left: 10px;
                width: auto;
                max-width: none;
                padding: 15px;
