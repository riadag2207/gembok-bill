            .stats-panel {
                position: fixed;
                bottom: 10px;
                left: 10px;
                right: 10px;
                top: auto;
                width: auto;
                max-width: none;
                padding: 12px;
                border-radius: 8px;
                transform: translateY(100%);
                transition: transform 0.3s ease;
