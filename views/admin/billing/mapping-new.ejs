            .control-panel h5 {
                margin-bottom: 10px;
                font-size: 1rem;
            }
            
            .control-panel .form-check {
                margin-bottom: 8px;
            }
            
            .control-panel .form-check-label {
                font-size: 0.9rem;
            }
        }
        
        /* Landscape mode adjustments */
        @media (max-width: 1024px) and (orientation: landscape) {
            .control-panel {
                position: fixed;
                top: calc(30vh + 5px);
                right: 10px;
