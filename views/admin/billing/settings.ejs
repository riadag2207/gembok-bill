<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= appSettings.companyHeader %></title>
    <link rel="manifest" href="/manifest.webmanifest">
    <meta name="theme-color" content="#0B1437">
    <link rel="apple-touch-icon" href="/img/icons/icon-192.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin-mobile-billing.css">
    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3f37c9;
            --accent-color: #4895ef;
            --success-color: #4cc9f0;
            --warning-color: #f72585;
            --info-color: #560bad;
            --light-color: #f8f9fa;
            --dark-color: #212529;
            --card-border-radius: 16px;
            --btn-border-radius: 50px;
            --transition-speed: 0.3s;
        }
        
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            color: var(--dark-color);
            line-height: 1.6;
            padding-bottom: 80px;
        }
        
        .mobile-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            padding: 1rem;
            margin-bottom: 1rem;
            border-radius: 0 0 20px 20px;
            box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
        }
        
        .settings-card {
            background: white;
            border-radius: 20px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            border: 1px solid rgba(0,0,0,0.05);
        }
        
        .settings-section {
            margin-bottom: 2rem;
        }
        
        .settings-section h5 {
            color: var(--primary-color);
            margin-bottom: 1rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .setting-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 0;
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }
        
        .setting-item:last-child {
            border-bottom: none;
        }
        
        .setting-label {
            font-weight: 500;
            color: var(--dark-color);
        }
        
        .setting-value {
            color: #6c757d;
            font-size: 0.9rem;
        }
        
        .setting-toggle {
            position: relative;
            display: inline-block;
            width: 50px;
            height: 24px;
        }
        
        .setting-toggle input {
            opacity: 0;
            width: 0;
            height: 0;
        }
        
        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 24px;
        }
        
        .slider:before {
            position: absolute;
            content: "";
            height: 18px;
            width: 18px;
            left: 3px;
            bottom: 3px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }
        
        input:checked + .slider {
            background-color: var(--primary-color);
        }
        
        input:checked + .slider:before {
            transform: translateX(26px);
        }
        
        .action-buttons {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-top: 1.5rem;
        }
        
        .action-btn {
            padding: 0.75rem 1rem;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            text-align: center;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }
        
        .btn-save {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
        }
        
        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(40, 167, 69, 0.4);
            color: white;
        }
        
        .btn-reset {
            background: linear-gradient(135deg, #ffc107, #ff8c00);
            color: white;
        }
        
        .btn-reset:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(255, 193, 7, 0.4);
            color: white;
        }
        
        .btn-back {
            background: linear-gradient(135deg, #6c757d, #495057);
            color: white;
        }
        
        .btn-back:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(108, 117, 125, 0.4);
            color: white;
        }
        
        .form-control {
            border-radius: 10px;
            border: 1px solid #e9ecef;
            padding: 0.75rem;
            font-size: 0.9rem;
        }
        
        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(67, 97, 238, 0.25);
        }
        
        .form-label {
            font-weight: 500;
            color: var(--dark-color);
            margin-bottom: 0.5rem;
        }
        
        @media (max-width: 768px) {
            .mobile-header {
                padding: 1rem;
                margin-bottom: 1rem;
            }
            
            .settings-card {
                padding: 1rem;
                margin-bottom: 1rem;
            }
            
            .action-buttons {
                grid-template-columns: 1fr;
                gap: 0.75rem;
            }
        }
    </style>
</head>
<body>
    <!-- Mobile Header -->
    <div class="mobile-header">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h4 class="mb-1">Pengaturan Billing</h4>
                <p class="mb-0 opacity-75">Kelola pengaturan sistem billing</p>
            </div>
            <div class="text-end">
                <a href="/admin/billing/mobile" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-arrow-left me-1"></i>Kembali
                </a>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- General Settings -->
                <div class="settings-card">
                    <div class="settings-section">
                        <h5><i class="bi bi-gear"></i>Pengaturan Umum</h5>
                        <div class="setting-item">
                            <div>
                                <div class="setting-label">Nama Perusahaan</div>
                                <div class="setting-value"><%= appSettings.companyHeader %></div>
                            </div>
                        </div>
                        <div class="setting-item">
                            <div>
                                <div class="setting-label">Slogan Perusahaan</div>
                                <div class="setting-value"><%= appSettings.company_slogan || 'Belum diatur' %></div>
                            </div>
                        </div>
                        <div class="setting-item">
                            <div>
                                <div class="setting-label">Website Perusahaan</div>
                                <div class="setting-value"><%= appSettings.company_website || 'Belum diatur' %></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Billing Settings -->
                <div class="settings-card">
                    <div class="settings-section">
                        <h5><i class="bi bi-receipt"></i>Pengaturan Billing</h5>
                        <div class="setting-item">
                            <div>
                                <div class="setting-label">Catatan Invoice</div>
                                <div class="setting-value"><%= appSettings.invoice_notes || 'Belum diatur' %></div>
                            </div>
                        </div>
                        <div class="setting-item">
                            <div>
                                <div class="setting-label">Grace Period Suspensi</div>
                                <div class="setting-value"><%= appSettings.suspension_grace_period_days %> hari</div>
                            </div>
                        </div>
                        <div class="setting-item">
                            <div>
                                <div class="setting-label">Profile Isolir</div>
                                <div class="setting-value"><%= appSettings.isolir_profile %></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Settings -->
                <div class="settings-card">
                    <div class="settings-section">
                        <h5><i class="bi bi-credit-card"></i>Pengaturan Pembayaran</h5>
                        <div class="setting-item">
                            <div>
                                <div class="setting-label">Nama Bank</div>
                                <div class="setting-value"><%= appSettings.payment_bank_name || 'Belum diatur' %></div>
                            </div>
                        </div>
                        <div class="setting-item">
                            <div>
                                <div class="setting-label">Nomor Rekening</div>
                                <div class="setting-value"><%= appSettings.payment_account_number || 'Belum diatur' %></div>
                            </div>
                        </div>
                        <div class="setting-item">
                            <div>
                                <div class="setting-label">Pemilik Rekening</div>
                                <div class="setting-value"><%= appSettings.payment_account_holder || 'Belum diatur' %></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact Settings -->
                <div class="settings-card">
                    <div class="settings-section">
                        <h5><i class="bi bi-telephone"></i>Kontak & Informasi</h5>
                        <div class="setting-item">
                            <div>
                                <div class="setting-label">Telepon</div>
                                <div class="setting-value"><%= appSettings.contact_phone || 'Belum diatur' %></div>
                            </div>
                        </div>
                        <div class="setting-item">
                            <div>
                                <div class="setting-label">Email</div>
                                <div class="setting-value"><%= appSettings.contact_email || 'Belum diatur' %></div>
                            </div>
                        </div>
                        <div class="setting-item">
                            <div>
                                <div class="setting-label">WhatsApp</div>
                                <div class="setting-value"><%= appSettings.contact_whatsapp || 'Belum diatur' %></div>
                            </div>
                        </div>
                        <div class="setting-item">
                            <div>
                                <div class="setting-label">Alamat</div>
                                <div class="setting-value"><%= appSettings.contact_address || 'Belum diatur' %></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="action-buttons">
                    <button class="action-btn btn-save" onclick="saveSettings()">
                        <i class="bi bi-check-circle me-1"></i>Simpan
                    </button>
                    <button class="action-btn btn-reset" onclick="resetSettings()">
                        <i class="bi bi-arrow-clockwise me-1"></i>Reset
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom Navigation -->
    <nav class="bottom-nav d-md-none">
        <a class="nav-item" href="/admin/billing/mobile/customers">
            <i class="bi bi-people"></i>
            <span>Pelanggan</span>
        </a>
        <a class="nav-item" href="/admin/billing/mobile/invoices">
            <i class="bi bi-receipt"></i>
            <span>Tagihan</span>
        </a>
        <a class="nav-item home-button" href="/admin/billing/mobile">
            <i class="bi bi-house"></i>
            <span>Home</span>
        </a>
        <a class="nav-item" href="/admin/billing/mobile/payments">
            <i class="bi bi-credit-card"></i>
            <span>Bayar</span>
        </a>
        <a class="nav-item" href="/admin/billing/mobile/map">
            <i class="bi bi-geo-alt"></i>
            <span>Map</span>
        </a>
    </nav>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin-mobile-billing.js"></script>
    <script>
        // Settings functions
        function saveSettings() {
            // Add haptic feedback
            if (navigator.vibrate) {
                navigator.vibrate(50);
            }
            
            // Show loading state
            const btn = event.target;
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-hourglass-split me-1"></i>Menyimpan...';
            btn.disabled = true;
            
            // Simulate API call
            setTimeout(() => {
                alert('Pengaturan berhasil disimpan!');
                btn.innerHTML = originalText;
                btn.disabled = false;
            }, 2000);
        }
        
        function resetSettings() {
            if (confirm('Apakah Anda yakin ingin mereset pengaturan ke default?')) {
                // Add haptic feedback
                if (navigator.vibrate) {
                    navigator.vibrate(50);
                }
                
                // Show loading state
                const btn = event.target;
                const originalText = btn.innerHTML;
                btn.innerHTML = '<i class="bi bi-hourglass-split me-1"></i>Mereset...';
                btn.disabled = true;
                
                // Simulate API call
                setTimeout(() => {
                    alert('Pengaturan berhasil direset!');
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                }, 2000);
            }
        }
        
        // Add touch feedback for action buttons
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.action-btn').forEach(btn => {
                btn.addEventListener('touchstart', function() {
                    this.style.transform = 'scale(0.95)';
                });
                
                btn.addEventListener('touchend', function() {
                    this.style.transform = 'scale(1)';
                });
            });
        });
    </script>
</body>
</html>
